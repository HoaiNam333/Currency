<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    
   <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_alignParentBottom="true"
			    android:orientation="vertical" >
			    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.65"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/copybutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xanhbutton"
                    android:text="COPY"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/sendbutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xanhbutton"
                    android:text="SEND" 
                    android:textSize="20sp"/>
                
                <Button
                    android:id="@+id/clrbutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/clr"
                    android:gravity="right|center_vertical"
                    android:text="CLR"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/delbutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/del"
                    android:gravity="right|center_vertical"
                    android:text="DEL" 
                    android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.65"
                android:orientation="horizontal" >
                
                
                <Button
                    android:id="@+id/Button07"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xambutton"
                    android:text="7"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/Button08"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xambutton"
                    android:text="8"
                    android:textSize="30sp" />
                
                <Button
                    android:id="@+id/Button09"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xambutton"
                    android:text="9"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/chiabutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xanhbutton"
                    android:text="รท" 
                    android:textSize="30sp"/>
                
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.65"
                    android:orientation="horizontal"
                     >

                    <Button
                        android:id="@+id/Button04"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/calculator_number_button_height"
                        android:layout_margin="2dp"
                        android:layout_weight="10"
                        android:background="@drawable/xambutton"
                        android:text="4" 
                        android:textSize="30sp"/>

                    <Button
                        android:id="@+id/Button05"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/calculator_number_button_height"
                        android:layout_margin="2dp"
                        android:layout_weight="10"
                        android:background="@drawable/xambutton"
                        android:text="5"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/Button06"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/calculator_number_button_height"
                        android:layout_margin="2dp"
                        android:layout_weight="10"
                        android:background="@drawable/xambutton"
                        android:text="6" 
                        android:textSize="30sp"/>

                    <Button
                        android:id="@+id/nhanbutton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/calculator_number_button_height"
                        android:layout_margin="2dp"
                        android:layout_weight="10"
                        android:background="@drawable/xanhbutton"
                        android:text="X" 
                        android:textSize="30sp"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.65"
                android:orientation="horizontal" >
               
                    
                    <Button
                    android:id="@+id/Button01"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xambutton"
                    android:text="1"
                    android:textSize="30sp" />
                    
                     <Button
                    android:id="@+id/Button02"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xambutton"
                    android:text="2" 
                    android:textSize="30sp"
                   />

                <Button
                    android:id="@+id/Button03"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xambutton"
                    android:text="3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/trubutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xanhbutton"
                    android:text="-" 
                    android:textSize="30sp"/>
                    
               </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.65"
                android:orientation="horizontal"          
                    >
                <Button
                    android:id="@+id/Button000"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xambutton"
                    android:text="000" 
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/Button00"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xambutton"
                    android:text="00" 
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/Button0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xambutton"
                    android:text="0" 
                    android:textSize="30sp"/>
                <Button
                    android:id="@+id/congbutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/xanhbutton"
                    android:text="+" 
                    android:textSize="30sp"/>
                
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.65"
                android:orientation="horizontal"          
                    >

                <Button
                    android:id="@+id/multiccbutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:background="@drawable/multi_currency"
                    android:textSize="30sp"
                    />

                <Button
                    android:id="@+id/congtrubutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:background="@drawable/congtru"
                    android:textSize="30sp"/>

                
                <Button
                    android:id="@+id/chambutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:background="@drawable/xanhbutton"
                    android:text="." 
                    android:textSize="30sp"/>
				<Button
                    android:id="@+id/bangbutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:background="@drawable/bang"
                    android:text="=" 
                    android:textSize="30sp"/>
    
                </LinearLayout> 
          </LinearLayout>
          <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_themchucnang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button_dieuchinh"
                    android:layout_alignBottom="@+id/button_dieuchinh"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/iconthemchucnag" />

                <TextView
                    android:id="@+id/textViewCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/button_dieuchinh"
                    android:text="  CURRENCY" />

                <Button
                    android:id="@+id/button_dieuchinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textViewCurrency"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="31dp"
                    android:background="@drawable/icondieuchinh" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background" >
                 >

                <ImageView
                    android:id="@+id/searchicon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/searchicon" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/nenxanh" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/searchicon1"
 					android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/searchicon" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nenxanh" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="numberDecimal" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>
</RelativeLayout>
