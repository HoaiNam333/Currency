<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".menu.MenuActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        
               	<LinearLayout 
	    		android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/khungmenudieuchinh"
                android:gravity="bottom" >

                <Button
                    android:id="@+id/button_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button_dieuchinh"
                    android:layout_alignBottom="@+id/button_dieuchinh"
                    android:onClick="onClickButtonCalculator"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shareapp" />

                <TextView
                    android:id="@+id/textViewCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/button_dieuchinh"
                    android:text="  CURRENCY" 
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/button_dieuchinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textViewCurrency"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/icondieuchinh" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:background="@drawable/background"
                android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/searchicon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/searchicon" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/nenxanh" />

                <Button
                    android:id="@+id/timeicon"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickButtonCalculator"
                    android:background="@drawable/timeicon" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:ems="10"
                    android:maxLength="99999999"
                    android:focusable="false"
                     android:scrollbars="horizontal"
                    android:inputType="numberDecimal" 
                    android:background="@drawable/nenxanh"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/searchicon1"
 					android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/searchicon" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nenxanh" />

                <Button
                    android:id="@+id/chuyendoi"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:onClick="onClickButtonCalculator"
                    android:background="@drawable/chuyendoiicon" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:ems="10"
                    android:maxLength="99999999"
                    android:focusable="false"
                     android:scrollbars="horizontal"
                    android:inputType="numberDecimal"
                    android:background="@drawable/nenxanh" />

            </LinearLayout>
            </LinearLayout>
   </LinearLayout>
	</LinearLayout>
	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:maxLength="99999999"
                    android:scrollbars="horizontal" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>
			    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.65"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/chiabutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/buttonxanh"
                    android:onClick="onClickButtonCalculator"
                    android:text="รท"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/nhanbutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/buttonxanh"
                    android:onClick="onClickButtonCalculator"
                    android:text="X"
                    android:textSize="20sp" />
                
                <Button
                    android:id="@+id/clrbutton"
                    android:layout_width="match_parent"
                    android:onClick="onClickButtonCalculator"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/clrbutton"
                    android:gravity="right|center_vertical"
                    android:text="CLR"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/delbutton"
                    android:layout_width="match_parent"
                    android:onClick="onClickButtonCalculator"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/delbutton"
                    android:gravity="right|center_vertical"
                    android:text="DEL" 
                    android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="4.65"
                android:orientation="horizontal" >
                
                
                <Button
                    android:id="@+id/Button07"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:onClick="onClickButtonCalculator"
                    android:background="@drawable/buttonxam"
                    android:text="7"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/Button08"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:onClick="onClickButtonCalculator"
                    android:background="@drawable/buttonxam"
                    android:text="8"
                    android:textSize="30sp" />
                
                <Button
                    android:id="@+id/Button09"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:onClick="onClickButtonCalculator"
                    android:background="@drawable/buttonxam"
                    android:text="9"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/trubutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/buttonxanh"
                    android:onClick="onClickButtonCalculator"
                    android:text="-"
                    android:textSize="30sp" />
                
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.65"
                    android:orientation="horizontal"
                     >

                    <Button
                        android:id="@+id/Button04"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/calculator_number_button_height"
                        android:layout_margin="2dp"
                        android:layout_weight="10"
                        android:onClick="onClickButtonCalculator"
                        android:background="@drawable/buttonxam"
                        android:text="4" 
                        android:textSize="30sp"/>

                    <Button
                        android:id="@+id/Button05"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/calculator_number_button_height"
                        android:layout_margin="2dp"
                        android:layout_weight="10"
                        android:onClick="onClickButtonCalculator"
                        android:background="@drawable/buttonxam"
                        android:text="5"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/Button06"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/calculator_number_button_height"
                        android:layout_margin="2dp"
                        android:layout_weight="10"
                        android:onClick="onClickButtonCalculator"
                        android:background="@drawable/buttonxam"
                        android:text="6" 
                        android:textSize="30sp"/>

                    <Button
                        android:id="@+id/congbutton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/calculator_number_button_height"
                        android:layout_margin="2dp"
                        android:layout_weight="10"
                        android:background="@drawable/buttonxanh"
                        android:onClick="onClickButtonCalculator"
                        android:text="+"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="4.65"
                android:orientation="horizontal" >
               
                    
                    <Button
                    android:id="@+id/Button01"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:onClick="onClickButtonCalculator"
                    android:layout_weight="10"
                    android:background="@drawable/buttonxam"
                    android:text="1"
                    android:textSize="30sp" />
                    
                     <Button
                    android:id="@+id/Button02"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:onClick="onClickButtonCalculator"
                    android:background="@drawable/buttonxam"
                    android:text="2" 
                    android:textSize="30sp"
                   />

                <Button
                    android:id="@+id/Button03"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:onClick="onClickButtonCalculator"
                    android:background="@drawable/buttonxam"
                    android:text="3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/chambutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/buttonxanh"
                    android:onClick="onClickButtonCalculator"
                    android:text="."
                    android:textSize="30sp" />
                    
               </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="4.65"
                android:orientation="horizontal"          
                    >
                <Button
                    android:id="@+id/Button000"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:onClick="onClickButtonCalculator"
                    android:background="@drawable/buttonxam"
                    android:text="000" 
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/Button00"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:onClick="onClickButtonCalculator"
                    android:background="@drawable/buttonxam"
                    android:text="00" 
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/Button0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:onClick="onClickButtonCalculator"
                    android:background="@drawable/buttonxam"
                    android:text="0" 
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/bangbutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/calculator_number_button_height"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/bangbutton"
                    android:onClick="onClickButtonCalculator"
                    android:text="="
                    android:textSize="30sp" />
                
                </LinearLayout> 
               </LinearLayout>
                       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical" >
                </LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>

